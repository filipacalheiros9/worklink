@{
    var loggedIn = Context.Session.GetString("LoggedIn") == "true";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkLink</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="@(loggedIn ? "HomePageLogin" : "Index")">WorkLink</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            @if (!loggedIn)
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn custom-login-btn me-2" asp-controller="Home" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn custom-register-btn" asp-controller="Home" asp-action="Register">Create account</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown-user position-relative">
                                    <button class="btn user-icon" onclick="toggleUserMenu()">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </button>

                                    <div id="userDropdownMenu" class="user-dropdown-menu d-none p-3 shadow border rounded bg-white position-absolute" style="top: 60px; right: 10px; z-index: 1000; min-width: 200px;">
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Perfil">👤 O meu perfil</a>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="CriarProjeto">📁 Os meus projetos</a>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="AsMinhasEquipas">👥 As minhas equipas</a>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Defenicoes">⚙️ Definições</a>
                                        <hr class="dropdown-divider">
                                        <a class="dropdown-item text-danger" asp-controller="Home" asp-action="Logout">🚪 Terminar sessão</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="container">
            @RenderBody()
        </main>

        <footer class="bg-dark text-white text-center p-3 mt-5">
            <p>&copy; 2025 WorkLink</p>
            <a asp-controller="Home" asp-action="Contato" class="text-white text-decoration-underline">Contato</a>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function toggleUserMenu() {
            const menu = document.getElementById("userDropdownMenu");
            menu.classList.toggle("d-none");
        }

        document.addEventListener("click", function (e) {
            const btn = document.querySelector(".user-icon");
            const menu = document.getElementById("userDropdownMenu");

            if (!btn.contains(e.target) && !menu.contains(e.target)) {
                menu.classList.add("d-none");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
