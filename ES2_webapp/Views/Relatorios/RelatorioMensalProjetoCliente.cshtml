@model List<ES2_webapp.DTO.Relatorios.ProjetoClienteReportDto>
@{
    ViewData["Title"] = "Relatório Mensal por Projeto e Cliente";
}

<h2>Relatório Mensal por Projeto e Cliente</h2>

@foreach (var cliente in Model)
{
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>Cliente: @cliente.NomeCliente</h4>
        </div>
        <div class="card-body">
            @foreach (var projeto in cliente.Projetos)
            {
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5>Projeto: @projeto.NomeProjeto</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var dia in projeto.Dias)
                        {
                            <div class="mb-2">
                                <strong>@dia.Dia.ToString("dd/MM/yyyy")</strong>
                                <table class="table table-bordered table-sm mt-1">
                                    <thead>
                                        <tr>
                                            <th>Utilizador</th>
                                            <th>Tarefa</th>
                                            <th>Horas</th>
                                            <th>Custo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in dia.Utilizadores)
                                        {
                                            foreach (var tarefa in user.Tarefas)
                                            {
                                                <tr>
                                                    <td>@user.NomeUtilizador</td>
                                                    <td>@tarefa.NomeTarefa</td>
                                                    <td>@tarefa.Horas.ToString("N2")</td>
                                                    <td>@tarefa.Custo.ToString("C")</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
} 